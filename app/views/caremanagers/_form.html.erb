<%= form_for(@caremanager) do |f| %>
  <% if @caremanager.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@caremanager.errors.count, "error") %> 箇所入力されていない為、登録できません。:</h2>

      <ul>
      <% @caremanager.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="form_caremaneger">
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :氏名（全角漢字） %></td>
      <th class="input_caremaneger"><%= f.text_field :name, :size=>"30x1", placeholder: "全角漢字で入力してください。" %></th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :氏名（全角カナ） %></td>
      <th class="input_caremaneger"><%= f.text_field :name_kana, :size=>"30x1", placeholder: "全角カナで入力してください。" %></th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :性別 %></td>
      <th class="input_caremaneger">
        <%= f.radio_button(:sex, "male") %>
        <%= f.label :sex, '男性', :value => "male" %>
        <%= f.radio_button(:sex, "female") %>
        <%= f.label :sex, '女性', :value => "female" %>
      </th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :生年月日 %></td>
      <th class="input_caremaneger">
        <%= f.date_select(
          :birth,
          start_year: 1930,
          end_year:   (Time.now.year),
          default:    Date.new(1989, 1, 1),
          use_month_numbers: true, date_separator: ' / ') %>
      </th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :年齢 %></td>
      <th class="input_caremaneger"><%= f.number_field :age %>歳</th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :郵便番号 %></td>
      <th class="input_caremaneger"><%= f.number_field :postal_code, placeholder: "-（ハイフン）はつけないでください。" %></th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :住所 %></td>
      <th class="input_caremaneger"><%= f.text_area :address, :size=>"50x3", placeholder: "住所を入力してください。" %></th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :携帯番号 %></td>
      <th class="input_caremaneger"><%= f.telephone_field :phone_num %></th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :メールアドレス %></td>
      <th class="input_caremaneger"><%= f.email_field :mail, placeholder: "@example.co.jp" %></th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :所属社名 %></td>
      <th class="input_caremaneger"><%= f.text_field :company %></th>
    </tr>
    <tr>
      <td class="title_caremaneger" style="text-align:center;"><%= f.label :在職ステータス %></td>
      <th class="input_caremaneger"><%= f.select :status, Caremanager.status.options %></th>
    </tr>
</table>

  <div class="actions">
    <%= f.submit '登録', :confirm => '登録してもよろしいですか？', :disable_with =>'登録中...' %>
  </div>
<% end %>
