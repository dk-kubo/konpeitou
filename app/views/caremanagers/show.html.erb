<p id="notice"><%= notice %></p>
<center>
  <h3><%= @caremanager.name_kana %></h3>
  <h1><%= @caremanager.name %></h1>
</center>

<table class="detail_table_caremaneger">
  <td colspan="4" class="head_caremaneger" style="text-align:center;">基本情報</td>
  <tr>
    <td class="title_caremaneger" style="text-align:center;"><strong>性別</strong></td>
    <th class="input_caremaneger"><%= @caremanager.sex_text %></th>
    <td class="title_caremaneger" style="text-align:center;"><strong>生年月日</strong></td>
    <th class="input_caremaneger"><%= @caremanager.birth.strftime("%Y年%m月%d日") %></th>
  </tr>
  <tr>
    <td class="title_caremaneger" style="text-align:center;"><strong>年齢</strong></td>
    <th class="input_caremaneger"><%= @caremanager.age %></th>
  </tr>
  <tr>
    <td class="title_caremaneger" style="text-align:center;"><strong>郵便番号</strong></td>
    <th class="input_caremaneger"><%= @caremanager.postal_code %></th>
  </tr>
  <tr>
    <td class="title_caremaneger" style="text-align:center;"><strong>住所</strong></td>
    <th colspan="3" class="input_caremaneger"><%= @caremanager.address %></th>
  </tr>
  <tr>
    <td class="title_caremaneger" style="text-align:center;"><strong>電話番号</strong></td>
    <th class="input_caremaneger"><%= @caremanager.phone_num %></th>
    <td class="title_caremaneger" style="text-align:center;"><strong>メールアドレス</strong></td>
    <th class="input_caremaneger"><%= @caremanager.mail %></th>
  </tr>
  <tr>
    <td class="title_caremaneger" style="text-align:center;"><strong>所属社名</strong></td>
    <th class="input_caremaneger"><%= @caremanager.company %></th>
    <td class="title_caremaneger" style="text-align:center;"><strong>在籍ステータス</strong></td>
    <th class="input_caremaneger"><%= @caremanager.status_text %></th>
  </tr>
</table>


<input type="checkbox" class="check" id="checked">
<label class="menu-btn" for="checked">
        <span class="bar top"></span>
        <span class="bar middle"></span>
        <span class="bar bottom"></span>
        <span class="menu-btn__text">MENU</span>
</label>
<label class="close-menu" for="checked"></label>
<nav class="drawer-menu">
        <ul>
            <li><%= link_to '編集', edit_caremanager_path(@caremanager) %></li>
            <li><%= link_to '一覧', caremanagers_path %></li>
        </ul>
</nav>