<p id="notice"><%= notice %></p>
<center>
  <h1>ケアマネージャー一覧</h1>
</center>

<table>
  <thead>
    <tr class="title">
      <th>ケアマネ番号</th>
      <th>名前</th>
      <th>性別</th>
      <th>年齢</th>
      <th>電話番号</th>
      <th>所属社名</th>
      <th>在職ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caremanagers.each do |caremanager| %>
      <tr>
        <td><%= caremanager.id %></td>
        <td><%= caremanager.name %></td>
        <td><%= caremanager.sex_text %></td>
        <td><%= caremanager.age %></td>
        <td><%= caremanager.phone_num %></td>
        <td><%= caremanager.company %></td>
        <td><%= caremanager.status_text %></td>
        <td><%= link_to '詳細', caremanager %></td>
        <td><%= link_to '編集', edit_caremanager_path(caremanager) %></td>
        <td><%= link_to '削除', caremanager, method: :delete, data: { confirm: '削除すると復元できません。退職された場合は「在職ステータス」を変更してください。それでもよろしいですか？' } %></td>
      </tr>
    <% end %>
    <% @caremanagers2.each do |caremanager| %>
      <tr>
        <td><%= caremanager.id %></td>
        <td><%= caremanager.name %></td>
        <td><%= caremanager.sex_text %></td>
        <td><%= caremanager.age %></td>
        <td><%= caremanager.phone_num %></td>
        <td><%= caremanager.company %></td>
        <td><%= caremanager.status_text %></td>
        <td><%= link_to '詳細', caremanager %></td>
        <td><%= link_to '編集', edit_caremanager_path(caremanager) %></td>
        <td><%= link_to '削除', caremanager, method: :delete, data: { confirm: '削除すると復元できません。退職された場合は「在職ステータス」を変更してください。それでもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

