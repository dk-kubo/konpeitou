        <td><%= customer.reception_day.strftime("%Y年%m月%d日") %></td>
        <td><%= customer.insure_num %></td>
        <td><%= link_to customer.name ,customer %></td>
        <td><%= customer.sex_text %></td>
        <td><%= customer.birth.strftime("%Y年%m月%d日") %></td>
        <td><%= customer.home_num %></td>
        <td><%= customer.mail %></td>
        <td><%= customer.status_text %></td>
      </tr>
    <% end %>
