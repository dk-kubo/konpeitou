<center>
  <h1>利用者一覧</h1>
</center>

<fieldset class="search_zone"><legend>検索</legend>
  <%= search_form_for @q do |f| %>
    <%= f.label :name_start, "利用者番号：" %>
    <%= f.search_field :id_eq, placeholder: "利用者番号" %><br>
    <%= f.label :name_start, "氏名　　　：" %>
    <%= f.search_field :name_start, placeholder: "氏名（全角漢字）" %><br>
    <%= f.label :name_kana_start, "カナ　　　：" %>
    <%= f.search_field :name_kana_start, placeholder: "氏名（全角カナ）" %><br>

    <%# 検索ボタン %>
    <%= f.submit '検索' %>
  <% end %>
</fieldset>

<br>
<h3>入所者一覧</h3>
<table>
  <thead>
    <tr class="title_cus">
      <th>受付日</th>
      <th>被保険者番号</th>
      <th>名前</th>
      <th>性別</th>
      <th>生年月日</th>
      <th>自宅番号</th>
      <th>メール</th>
      <th>在籍ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers1.each do |customer| %>
      <tr>
        <td><%= customer.reception_day.strftime("%Y年%m月%d日") %></td>
        <td><%= customer.insure_num %></td>
        <td><%= link_to customer.name ,customer %></td>
        <td><%= customer.sex_text %></td>
        <td><%= customer.birth.strftime("%Y年%m月%d日") %></td>
        <td><%= customer.home_num %></td>
        <td><%= customer.mail %></td>
        <td><%= customer.status_text %></td>
      </tr>
    <% end %>
  </tbody>
</table>


