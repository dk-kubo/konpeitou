<%= form_for(@staff) do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
      <% @staff.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :名前 %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :カナ %><br>
    <%= f.text_field :name_kana %>
  </div>
  <div class="field">
    <%= f.label :性別 %><br>
    <%= f.radio_button(:sex, "male") %>
    <%= f.label :sex, '男性', :value => "male" %>
    <%= f.radio_button(:sex, "female") %>
    <%= f.label :sex, '女性', :value => "female" %>
  </div>
  <div class="field">
    <%= f.label :生年月日 %><br>
    <%= f.date_select(
          :birth,
          start_year: 1930,
          end_year:   (Time.now.year),
          default:    Date.new(1989, 1, 1)) %>
  </div>
  <div class="field">
    <%= f.label :年齢 %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :郵便番号 %><br>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :携帯番号 %><br>
    <%= f.text_field :phone_num %>
  </div>
  <div class="field">
    <%= f.label :自宅番号 %><br>
    <%= f.text_field :home_num %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %><br>
    <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :役職 %><br>
    <%= f.select :role, Staff.role.options %>
  </div>
  <div class="field">
    <%= f.label :在職ステータス %><br>
    <%= f.select :status, Staff.status.options %>
  </div>
  <div class="actions">
    <%= f.submit '登録', :confirm => '登録してもよろしいですか？', :disable_with =>'登録中...' %>
  </div>
<% end %>
