<p id="notice"><%= notice %></p>
<center>
  <h1>スタッフ一覧</h1>
</center>

<table>
  <thead>
    <tr class="title_staff">
      <th>スタッフ番号</th>
      <th>名前</th>
      <th>性別</th>
      <th>年齢</th>
      <th>携帯番号</th>
      <th>役職</th>
      <th>在職ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.id %></td>
        <td><%= link_to staff.name, staff %></td>
        <td><%= staff.sex_text %></td>
        <td><%= staff.age %></td>
        <td><%= staff.phone_num %></td>
        <td><%= staff.role_text %></td>
        <td><%= staff.status_text %></td>
      </tr>
    <% end %>
    <% @staffs2.each do |staff| %>
