<p id="notice"><%= notice %></p>
<center>
  <h3><%= @staff.name_kana %></h3>
  <h1><%= @staff.name %></h1>
</center>

<table class="detail_table_staff">
  <td colspan="4" class="head_staff" style="text-align:center;">基本情報</td>
  <tr>
    <td class="title_staff" style="text-align:center;"><strong>性別</strong></td>
    <th class="input_staff"><%= @staff.sex_text %></th>
    <td class="title_staff" style="text-align:center;"><strong>生年月日</strong></td>
    <th class="input_staff"><%= @staff.birth.strftime("%Y年%m月%d日") %></th>
  </tr>
  <tr>
    <td class="title_staff" style="text-align:center;"><strong>年齢</strong></td>
    <th class="input_staff"><%= @staff.age %></th>
  </tr>
  <tr>
    <td class="title_staff" style="text-align:center;"><strong>郵便番号</strong></td>
    <th class="input_staff"><%= @staff.postal_code %></th>
  </tr>
  <tr>
    <td class="title_staff" style="text-align:center;"><strong>住所</strong></td>
    <th colspan="3" class="input_staff"><%= @staff.address %></th>
  </tr>
  <tr>
    <td class="title_staff" style="text-align:center;"><strong>電話番号</strong></td>
    <th class="input_staff"><%= @staff.phone_num %></th>
    <td class="title_staff" style="text-align:center;"><strong>自宅番号</strong></td>
    <th class="input_staff"><%= @staff.home_num %></th>
  </tr>
  <tr>
    <td class="title_staff" style="text-align:center;"><strong>メールアドレス</strong></td>
    <th colspan="3" class="input_staff"><%= @staff.mail %></th>
  </tr>
  <tr>
    <td class="title_staff" style="text-align:center;"><strong>役職</strong></td>
    <th class="input_staff"><%= @staff.role_text %></th>
    <td class="title_staff" style="text-align:center;"><strong>在籍ステータス</strong></td>
    <th class="input_staff"><%= @staff.status_text %></th>
  </tr>
</table>

<input type="checkbox" class="check" id="checked">
<label class="menu-btn" for="checked">
        <span class="bar top"></span>
        <span class="bar middle"></span>
        <span class="bar bottom"></span>
        <span class="menu-btn__text">MENU</span>
</label>
<label class="close-menu" for="checked"></label>
<nav class="drawer-menu">
        <ul>
            <li><%= link_to '編集', edit_staff_path(@staff) %></li>
            <li><%= link_to '一覧へ', staffs_path %></li>
        </ul>
</nav>